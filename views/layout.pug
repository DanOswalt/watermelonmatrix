doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(href="https://fonts.googleapis.com/css?family=Barlow|Bungee", rel="stylesheet")
    link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
    link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav#accountNav.container-fluid
      .btn-bar
        if (!user)
          a(href='/login').btn.bar-btn Login
          a(href='/register').btn.bar-btn Register
        if (user)
          a(href="/").btn.bar-btn Hi #{user.username}
          a(href='/logout').btn.bar-btn Logout
          a#new-slicebtn(href="/addSlice").btn.action-btn + Add a Slice
      h1#title.navbar-brand Watermelon Matrix
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src="/js/events.js")
    block content
      
      
