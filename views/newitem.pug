extends layout

block content
  .container
    form.form-signin(role='form', action="/openslice/" + sindex + "/doadditem", method="post", style='max-width: 300px;')
      input.form-control(type='text', name="name", placeholder='Item Name')
      input.form-control(type='text', name="cycle", placeholder='Cycle every this many days')
      input.form-control(type='text', name="redline", placeholder='Turn red this many days before end')
      input.form-control(type='text', name="startingcount", placeholder='Start with this many days left')
      button.btn.form-control(type='submit') Make New Item
